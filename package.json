{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon --config nodemon.json",
    "start:debug": "npm run build && node --inspect=9229 ./dist/main.rest.js | pino-pretty --colorize -t SYS:standard",
    "watch": "npm run build && node --watch ./dist/main.rest.js | pino-pretty --colorize -t SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@typegoose/typegoose": "12.16.0",
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/express": "^5.0.3",
    "@types/mime-types": "3.0.1",
    "@types/multer": "2.0.0",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "dotenv": "16.5.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "nodemon": "^3.1.10",
    "pino-pretty": "13.0.0",
    "rimraf": "5.0.1",
    "tslib": "^2.8.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "chalk": "5.4.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "express": "5.1.0",
    "got": "^14.4.7",
    "http-status-codes": "2.3.0",
    "inversify": "7.5.2",
    "mime-types": "3.0.1",
    "mongoose": "8.15.2",
    "multer": "2.0.2",
    "pino": "9.7.0",
    "reflect-metadata": "0.2.2"
  }
}
